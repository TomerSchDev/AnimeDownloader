<Window x:Class="AnimeBingeDownloader.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Anime Downloader Task Manager" 
        Height="650" Width="850"
        MinHeight="500" MinWidth="700"
        WindowStartupLocation="CenterScreen"
        MouseDoubleClick="TaskDataGrid_MouseDoubleClick">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
            <Button x:Name="SettingsButton" Content="Settings" Style="{StaticResource SecondaryButton}" Margin="5" Width="80" Height="30" Click="SettingsButton_Click"/>
            <Button x:Name="HistoryButton" Content="History" Style="{StaticResource SecondaryButton}" Margin="5" Width="80" Height="30" Click="HistoryButton_Click"/>
        </StackPanel>
        
        <TabControl x:Name="MainTabControl" 
                    Grid.Row="1"
                    Margin="5,0,5,5">
            
            <!-- Tab 1: New Task Input -->
            <TabItem Header="New Task">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- URL Input -->
                    <Label Grid.Row="0" Grid.Column="0" 
                           Content="Anime URL:" 
                           FontWeight="Bold" 
                           FontSize="10"
                           VerticalAlignment="Center"
                           Margin="5"/>
                    
                    <TextBox x:Name="UrlTextBox" 
                             Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2"
                             Margin="5"
                             Padding="5"
                             VerticalAlignment="Center"
                             Height="30"/>

                    <!-- Directory Input -->
                    <Label Grid.Row="1" Grid.Column="0" 
                           Content="Save To:" 
                           FontWeight="Bold" 
                           FontSize="10"
                           VerticalAlignment="Center"
                           Margin="5"/>
                    
                    <TextBox x:Name="DirectoryTextBox" 
                             Grid.Row="1" Grid.Column="1"
                             Margin="5"
                             Padding="5"
                             VerticalAlignment="Center"
                             Height="30"/>
                    
                    <Button x:Name="BrowseButton" 
                            Grid.Row="1" Grid.Column="2"
                            Content="Browse" 
                            Style="{StaticResource SecondaryButton}"
                            Margin="5"
                            Width="80"
                            Height="30"
                            Click="BrowseButton_Click"/>

                    <!-- Start Button -->
                    <Button x:Name="StartTaskButton" 
                            Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3"
                            Content="Add to Queue &amp; Start Task" 
                            Style="{StaticResource SuccessButton}"
                            Margin="5,15,5,5"
                            Height="40"
                            FontSize="12"
                            Click="StartTaskButton_Click"/>

                    <!-- Note -->
                    <TextBlock Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3"
                               Text="Note: Scraping requires opening a browser window (non-headless mode)."
                               Foreground="Gray"
                               Margin="5"
                               TextWrapping="Wrap"/>
                </Grid>
            </TabItem>

            <!-- Tab 2: Task Manager -->
            <TabItem Header="Task Manager">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Task List DataGrid -->
                    <DataGrid x:Name="TaskDataGrid" 
                              Grid.Row="0"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              SelectionMode="Single"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              CanUserReorderColumns="False"
                              CanUserResizeRows="False"
                              GridLinesVisibility="Horizontal"
                              HeadersVisibility="Column"
                              AlternatingRowBackground="#F8F8F8"
                              SelectionChanged="TaskDataGrid_SelectionChanged"
                              MouseDoubleClick="TaskDataGrid_MouseDoubleClick">
                        
                        <DataGrid.ContextMenu>
                            <ContextMenu x:Name="TaskContextMenu">
                                <MenuItem Header="View Log" Click="ViewLog_Click"/>
                                <MenuItem Header="Cancel Task" Click="CancelTask_Click"/>
                                <Separator/>
                                <MenuItem Header="Set Priority">
                                    <MenuItem Header="High" Click="SetPriorityHigh_Click"/>
                                    <MenuItem Header="Medium" Click="SetPriorityMedium_Click"/>
                                    <MenuItem Header="Low" Click="SetPriorityLow_Click"/>
                                </MenuItem>
                                <MenuItem Header="Pause/Resume Task" Click="TogglePause_Click"/>
                            </ContextMenu>
                        </DataGrid.ContextMenu>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" 
                                              Binding="{Binding Id}" 
                                              Width="60"/>
                            
                            <DataGridTextColumn Header="Anime Title" 
                                              Binding="{Binding Title}" 
                                              Width="200"/>
                            
                            <DataGridTextColumn Header="Priority" 
                                              Binding="{Binding PriorityStr}" 
                                              Width="80"/>
                            
                            <DataGridTextColumn Header="Episodes Scraped" 
                                              Binding="{Binding EpisodesScrapedDisplay}" 
                                              Width="120"/>
                            
                            <DataGridTextColumn Header="Status" 
                                              Binding="{Binding StatusStr}" 
                                              Width="200"/>
                            
                            <DataGridTextColumn Header="Episodes Downloaded" 
                                              Binding="{Binding EpisodesDownloadedDisplay}" 
                                              Width="100"/>
                            
                            <DataGridTextColumn Header="Run Time" 
                                              Binding="{Binding ElapsedTime}" 
                                              Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <DataGrid x:Name="TaskDetailPanel"
                              Grid.Row="1"
                              MinHeight="150"
                              Margin="0, 10, 0, 0"
                              Visibility="Collapsed"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              HeadersVisibility="Column">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" 
                                                Binding="{Binding Id}" 
                                                Width="60"/>
                            
                            <DataGridTextColumn Header="Anime Title" 
                                                Binding="{Binding AnimeName}" 
                                                Width="200"/>
                            
                            <DataGridTextColumn Header="Episode Number" 
                                                Binding="{Binding EpisodeNumber}" 
                                                Width="80"/>
                            
                            <DataGridTextColumn Header="Status" 
                                                Binding="{Binding StatusStr}" 
                                                Width="200"/>
                            
                            <DataGridTextColumn Header="Size" 
                                                Binding="{Binding SizeDisplay}" 
                                                Width="200"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <!-- Control Buttons -->
                    <StackPanel Grid.Row="2" 
                                Orientation="Horizontal" 
                                Margin="5,10,5,5"
                                HorizontalAlignment="Left">
                        
                        <Button x:Name="CancelTaskButton" 
                                Content="Cancel Selected Task" 
                                Style="{StaticResource DangerButton}"
                                Margin="0,0,10,0"
                                Click="CancelTask_Click"/>
                        
                        <Button x:Name="ViewLogButton" 
                                Content="View Selected Task Log" 
                                Style="{StaticResource InfoButton}"
                                Click="ViewLog_Click"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Tab 3: Task Log -->
            <TabItem Header="Task Log">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Log Text Box -->
                    <TextBox x:Name="LogTextBox" 
                             Grid.Row="0"
                             IsReadOnly="True"
                             VerticalScrollBarVisibility="Auto"
                             HorizontalScrollBarVisibility="Auto"
                             FontFamily="Consolas"
                             FontSize="10"
                             Background="#F8F8F8"
                             TextWrapping="Wrap"
                             Padding="5"/>

                    <!-- Export Button -->
                    <Button x:Name="ExportLogButton" 
                            Grid.Row="1"
                            Content="Export Log to File" 
                            Style="{StaticResource InfoButton}"
                            Margin="5,10,5,5"
                            HorizontalAlignment="Left"
                            Background="#17a2b8"
                            Click="ExportLog_Click"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>