<Window x:Class="AnimeBingeDownloader.Views.HistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Task History" 
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen">
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Download History" 
                   FontSize="20" 
                   FontWeight="Bold"
                   Margin="0,0,0,15"/>

        <!-- Filter Bar -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Label Grid.Column="0" 
                   Content="Filter by Status:" 
                   VerticalAlignment="Center"
                   Margin="0,0,10,0"/>
            
            <ComboBox x:Name="StatusFilterComboBox"
                      Grid.Column="1"
                      Width="150"
                      HorizontalAlignment="Left"
                      SelectionChanged="StatusFilterComboBox_SelectionChanged">
                <ComboBoxItem Content="All" IsSelected="True"/>
                <ComboBoxItem Content="Completed"/>
                <ComboBoxItem Content="Canceled"/>
                <ComboBoxItem Content="Error"/>
                <ComboBoxItem Content="Running"/>
            </ComboBox>

            <Button x:Name="RefreshButton"
                    Grid.Column="2"
                    Content="Refresh"
                    Width="80"
                    Margin="10,0,10,0"
                    Click="RefreshButton_Click"/>
            
            <Button x:Name="ClearHistoryButton"
                    Grid.Column="3"
                    Content="Clear History"
                    Width="100"
                    Style="{StaticResource DangerButton}"
                    Click="ClearHistoryButton_Click"/>
        </Grid>

        <!-- History DataGrid -->
        <DataGrid x:Name="HistoryDataGrid" 
                  Grid.Row="2"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  CanUserReorderColumns="True"
                  CanUserResizeRows="False"
                  GridLinesVisibility="Horizontal"
                  HeadersVisibility="Column"
                  AlternatingRowBackground="#F8F8F8">
            
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Delete Entry" Click="DeleteEntry_Click"/>
                    <MenuItem Header="Copy URL" Click="CopyUrl_Click"/>
                    <MenuItem Header="Open Directory" Click="OpenDirectory_Click"/>
                </ContextMenu>
            </DataGrid.ContextMenu>

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" 
                                    Binding="{Binding Id}" 
                                    Width="60"/>
                
                <DataGridTextColumn Header="Title" 
                                    Binding="{Binding Title}" 
                                    Width="*"/>
                
                <DataGridTextColumn Header="Status" 
                                    Binding="{Binding Status}" 
                                    Width="100"/>
                
                <DataGridTextColumn Header="Episodes" 
                                    Width="120">
                    <DataGridTextColumn.Binding>
                        <MultiBinding StringFormat="{}{0}/{1}">
                            <Binding Path="EpisodesCompleted"/>
                            <Binding Path="EpisodesFound"/>
                        </MultiBinding>
                    </DataGridTextColumn.Binding>
                </DataGridTextColumn>
                
                <DataGridTextColumn Header="Start Time" 
                                    Binding="{Binding StartTime, StringFormat='{}{0:yyyy-MM-dd HH:mm}'}" 
                                    Width="140"/>
                
                <DataGridTextColumn Header="Duration" 
                                    Binding="{Binding ElapsedTime}" 
                                    Width="100"/>
                
                <DataGridTextColumn Header="Priority" 
                                    Binding="{Binding Priority}" 
                                    Width="80"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Status Bar -->
        <StatusBar Grid.Row="3" 
                   Height="30" 
                   Margin="0,10,0,0">
            <StatusBarItem>
                <TextBlock x:Name="StatusTextBlock" 
                           Text="Ready"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>