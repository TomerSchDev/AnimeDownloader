<Window x:Class="AnimeBingeDownloader.Views.HistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:AnimeBingeDownloader.Views.Converters"
        xmlns:models="clr-namespace:AnimeBingeDownloader.Models"
        Title="Task History" 
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen">
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Download History" 
                   FontSize="20" 
                   FontWeight="Bold"
                   Margin="0,0,0,15"/>

        <!-- Filter Bar -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Label Grid.Column="0" 
                   Content="Filter by Status:" 
                   VerticalAlignment="Center"
                   Margin="0,0,10,0"/>
            
            <ComboBox x:Name="StatusFilterComboBox"
                      Grid.Column="1"
                      Width="150"
                      HorizontalAlignment="Left"
                      DisplayMemberPath="."
                      SelectedIndex="0"
                      SelectionChanged="StatusFilterComboBox_SelectionChanged" />

            <Button x:Name="RefreshButton"
                    Grid.Column="2"
                    Content="Refresh"
                    Width="80"
                    Margin="10,0,10,0"
                    Click="RefreshButton_Click"/>
            
            <Button x:Name="ClearHistoryButton"
                    Grid.Column="3"
                    Content="Clear History"
                    Width="100"
                    Style="{StaticResource DangerButton}"
                    Click="ClearHistoryButton_Click"/>
        </Grid>

        <!-- History DataGrid -->
        <DataGrid x:Name="HistoryDataGrid" 
                  Grid.Row="2"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  CanUserReorderColumns="True"
                  CanUserResizeRows="False"
                  GridLinesVisibility="Horizontal"
                  HeadersVisibility="Column"
                  AlternatingRowBackground="#F8F8F8">
            
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Delete Entry" Click="DeleteEntry_Click"/>
                    <MenuItem Header="Copy URL" Click="CopyUrl_Click"/>
                    <MenuItem Header="Open Directory" Click="OpenDirectory_Click"/>
                </ContextMenu>
            </DataGrid.ContextMenu>

            <DataGrid.Resources>
                <converters:EnumToDisplayConverter x:Key="EnumConverter"/>
                <converters:ElapsedTimeConverter x:Key="ElapsedTimeConverter"/>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" 
                                  Binding="{Binding _id}" 
                                  Width="60"
                                  IsReadOnly="True"/>
                
                <DataGridTextColumn Header="Title" 
                                  Binding="{Binding _title}" 
                                  Width="*"
                                  IsReadOnly="True">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                            <Setter Property="ToolTip" Value="{Binding _title}"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                
                <DataGridTextColumn Header="Status" 
                                  Width="120"
                                  IsReadOnly="True">
                    <DataGridTextColumn.Binding>
                        <Binding Path="_taskStatus" Converter="{StaticResource EnumConverter}">
                            <Binding.ConverterParameter>
                                <models:TaskStatus>Completed</models:TaskStatus>
                            </Binding.ConverterParameter>
                        </Binding>
                    </DataGridTextColumn.Binding>
                </DataGridTextColumn>
                
                <DataGridTextColumn Header="Episodes" 
                                  Width="100"
                                  IsReadOnly="True">
                    <DataGridTextColumn.Binding>
                        <MultiBinding StringFormat="{}{0}/{1}">
                            <Binding Path="_episodesCompleted"/>
                            <Binding Path="_episodesFound"/>
                        </MultiBinding>
                    </DataGridTextColumn.Binding>
                </DataGridTextColumn>
                
                <DataGridTextColumn Header="Start Time" 
                                  Binding="{Binding _startTime, StringFormat='{}{0:yyyy-MM-dd HH:mm}'}" 
                                  Width="140"
                                  IsReadOnly="True"/>
                
                <DataGridTextColumn Header="Duration" 
                                  Width="100"
                                  IsReadOnly="True">
                    <DataGridTextColumn.Binding>
                        <Binding Path="_elapsedTime" 
                               Converter="{StaticResource ElapsedTimeConverter}"
                               UpdateSourceTrigger="PropertyChanged"/>
                    </DataGridTextColumn.Binding>
                </DataGridTextColumn>
                
                <DataGridTextColumn Header="Priority" 
                                  Width="100"
                                  IsReadOnly="True">
                    <DataGridTextColumn.Binding>
                        <Binding Path="_taskPriority" Converter="{StaticResource EnumConverter}">
                            <Binding.ConverterParameter>
                                <models:TaskPriority>Medium</models:TaskPriority>
                            </Binding.ConverterParameter>
                        </Binding>
                    </DataGridTextColumn.Binding>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Status Bar -->
        <StatusBar Grid.Row="3" 
                   Height="30" 
                   Margin="0,10,0,0">
            <StatusBarItem>
                <TextBlock x:Name="StatusTextBlock" 
                           Text="Ready"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>